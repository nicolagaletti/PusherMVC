@model PusherMvc.Web.Models.AddProductViewModel

@{
    ViewBag.Title = "Product Details";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <p>
               test
            </p>
        </div>
    </section>
}

<h3>Product: @DateTime.Now</h3>

<ul>
    <li>Title: @Html.DisplayFor(m => m.Title)</li>
    <li>Description: @Html.DisplayFor(m => m.Description)</li>
    <li>Quantity: <span id="quantity">@Html.DisplayFor(m => m.StockLevel)</span></li>
</ul>

<div id="status"></div>

<input type="hidden" id="productId" value="@Html.ValueFor(m => m.Id)"/>
<a id="BuyButton" href="#" >Buy</a>

